
<style>
    .main{
        margin-top: 6rem;
        margin-bottom: 6rem;
    }
</style>

<div class="main">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();

        <div class="form-group">
            @Html.Label("Email: ", new { @class = "control-label col-md-2" })
            @Html.TextBox("Email")
        </div>

        <div class="form-group">
            @Html.Label("Slaptaždosi: ", new { @class = "control-label col-md-2" })
            @Html.Password("password")
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Prisijungti" class="btn btn-default" />
            </div>
        </div>
    }
</div>